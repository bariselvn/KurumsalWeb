<body class="login-img3-body">
    <div class="container">
        <form class="login-form" method="post" action="/Admin/ForgotPassword/">
            <div class="login-wrap"> 
                <p class="alert ">@ViewBag.Warning</p>s
                <p class="login-img"><i class="icon_lock_alt"></i></p>
                <div class="input-group">
                    <span class="input-group-addon"><i class="icon_profile"></i></span>
                    <input type="text" class="form-control" name="mail" placeholder="Email" autofocus required>
                </div>
                <button class="btn btn-primary btn-lg btn-block" type="submit">Şifremi Mail Olarak Gönder</button>
            </div>
            <div>
                <button class="btn btn-dark btn-lg btn-block" onclick="window.location.href='/Admin/Login/';"  type="button">Giriş Ekranına Dön</button>
            </div>
        </form>
    </div>
</body>
