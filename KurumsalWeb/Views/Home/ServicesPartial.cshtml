@model  IEnumerable<KurumsalWeb.Models.Service>
@{
    Layout = null;
}
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {

                if (item.ServiceId == 1005)
                {
                    <div class="col-md-6 col-lg-3 d-flex align-items-stretch" data-aos="fade-up">
                        <div id="box" class="icon-box icon-box-blue">
                            <div id="icon" class="icon"><i class="bx bx-world"></i></div>
                            <h4 class="title"><a href="">@item.Title</a></h4>
                            <p class="description">@Html.Raw(item.Description)</p>
                        </div>
                    </div>
                }
                else if (item.ServiceId == 1004)
                {
                    <div class="col-md-6 col-lg-3 d-flex align-items-stretch" data-aos="fade-up">
                        <div id="box" class="icon-box icon-box-green">
                            <div id="icon" class="icon"><i class="bx bx-tachometer"></i></div>
                            <h4 class="title"><a href="">@item.Title</a></h4>
                            <p class="description">@Html.Raw(item.Description)</p>
                        </div>
                    </div>
                }
                else if (item.ServiceId == 1002)
                {
                    <div class="col-md-6 col-lg-3 d-flex align-items-stretch" data-aos="fade-up">
                        <div id="box" class="icon-box icon-box-cyan">
                            <div id="icon" class="icon"><i class="bx bx-file"></i></div>
                            <h4 class="title"><a href="">@item.Title</a></h4>
                            <p class="description">@Html.Raw(item.Description)</p>
                        </div>
                    </div>
                }
                else 
                {
                    <div class="col-md-6 col-lg-3 d-flex align-items-stretch" data-aos="fade-up">
                        <div id="box" class="icon-box icon-box-pink">
                            <div id="icon" class="icon"><i class="bx bxl-dribbble"></i></div>
                            <h4 class="title"><a href="">@item.Title</a></h4>
                            <p class="description">@Html.Raw(item.Description)</p>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
