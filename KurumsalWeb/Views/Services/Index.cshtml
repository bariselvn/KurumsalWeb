@model IEnumerable<KurumsalWeb.Models.Service>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout .cshtml";
}



<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PictureURL)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.Raw(item.Description)
        </td>
        <td>
            <img class="img-responsive" src="@item.PictureURL" width="200" height="200"></img>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ServiceId })    |
            @Html.ActionLink("Delete", "Delete", new { id = item.ServiceId })

        </td>
    </tr>
}

</table>
